# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
# DEBUG=True
# ALLOWED_HOSTS=localhost,127.0.0.1,192.168.0.148,192.168.0.169
ALLOWED_HOSTS=['*]
# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=skillsynch_db
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# JWT Configuration
JWT_ACCESS_TOKEN_LIFETIME=60  # minutes
JWT_REFRESH_TOKEN_LIFETIME=1440  # minutes (24 hours)
JWT_ALGORITHM=HS256

# OTP Configuration
OTP_EXPIRY_TIME=120  # seconds (2 minutes)
OTP_MAX_ATTEMPTS=3
OTP_RESEND_COOLDOWN=60  # seconds

# Email Configuration (for development - console backend)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@skillsynch.com

# SMS Configuration (Twilio - for production)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# AWS SNS Configuration (alternative to Twilio)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_OTP=5/h  # 5 OTP requests per hour
RATE_LIMIT_LOGIN=10/h  # 10 login attempts per hour

# Media & Static Files
MEDIA_ROOT=media
STATIC_ROOT=static
